<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/linearlayout_recyclerview_itemcyphers"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/cardBg"
        android:hapticFeedbackEnabled="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:maxLines="2"
                android:foreground="@drawable/strikethrough_foreground"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Title"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/decodedCipher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:maxLines="3"
                android:padding="5dp"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="23 May 2021"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:textSize="15dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>